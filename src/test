import CarDetail from "./CarDetail.jsx";

function Cars ({ cars, startEditing, deleteCar, showCarDetails }) {
    return (
        <div className="car-list">
            <h2>Car List</h2>
            {/* Weergave van de lijst met auto's als een geordende lijst */}
            <ul>
                {cars.map((car) => (
                    <li key={car._id}>
                        <p>Name: {car.name}</p>

                        {/* Knoppen voor het bewerken, verwijderen en tonen van details van een auto */}
                        <button onClick={() => startEditing(car)}>Edit</button>
                        <button onClick={() => deleteCar(car._id)}>Delete</button>
                        <button onClick={() => showCarDetails(car)}>Details</button>

                        {/* Weergave van de details van een auto als de showDetails-vlag is ingesteld */}
                        {car.showDetails && (
                            <CarDetail
                                car={car}
                                onClose={() => car.hideDetails()}
                            />
                        )}
                    </li>
                ))}
            </ul>
        </div>
    );
}

export default Cars;